<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.nektar.info/schema/nektar.xsd">

    <EXPANSIONS>
        <E COMPOSITE="C[1]" NUMMODES="4" TYPE="MODIFIED" FIELDS="u" />
        <E COMPOSITE="C[1]" NUMMODES="4" TYPE="MODIFIED" FIELDS="rho" />
    </EXPANSIONS>

    <CONDITIONS>

        <SOLVERINFO>
            <I PROPERTY="EQTYPE" VALUE="PoissonPIC" />
            <I PROPERTY="Projection" VALUE="Continuous" />
        </SOLVERINFO>

        <PARAMETERS>
            <P> Lambda = 0.0 </P>
            <P> epsilon = -1.0 </P>
            <P> num_particles_total = 100000 </P>
            <P> num_particles_per_cell = -1 </P>
            <!-- Maxwellian, see partial_thermal_velocity -->
            <P> particle_distribution_position = 4 </P>
            <!--Timestep dependent on cell size and plasma/cyclotron frequency.
            dt = 2pi/Wp/16, where we know the cyclotron frequency is slower,
            and the plasma frequency Wp=sqrt(n0)=2pi in these units. The factor
            of 16 here is tunable for stability and resolution,
            where larger is better-->
            <!--1/64 = 0.015625-->
            <P> particle_time_step = 0.0625 </P>
            <!--Length of the box is unity, number density is 4pi^2-->
            <P> particle_number_density = 39.47841760435743 </P>
            <!--The magnetic field must be in the x-y plane. Put in x direction
            without loss of generality. Choose magnetic field strength to tune
            the ratio of the plasma frequency to the cyclotron frequency to show
            Bernstein modes with strong shaping the dispersion relation. Hence
            B0=sqrt(n0)/16=2pi/16 in these units-->
            <P> particle_B_x = 0.39269908169872414 </P>
            <P> particle_B_y = 0.0 </P>
            <P> particle_B_z = 0.0 </P>
            <!--Thermal velocity is sqrt(n0)/(4 * 16), which matches
            the thermals speed to the Debye length 1/ (4 * 16) -->
            <P> particle_thermal_velocity = 0.09817477042468103 </P>
            <!-- IO -->
            <!--   - Particles-->
            <P> particle_num_time_steps = 32768 </P>
            <P> particle_num_write_particle_steps = 512 </P>
            <P> particle_num_write_field_energy_steps = 512 </P>
            <P> particle_num_write_field_steps = 512 </P>
            <P> particle_num_print_steps = 2 </P>
            <!--   - Line outs -->
            <P> line_field_deriv_evaluations_step = 4 </P>
            <P> line_field_deriv_evaluations_numx = 128 </P>
            <P> line_field_deriv_evaluations_numy = 128 </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> u </V>
            <V ID="1"> rho </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="1"> C[100] </B>
            <B ID="2"> C[200]  </B>
            <B ID="3"> C[300] </B>
            <B ID="4"> C[400] </B>
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="1">
                <P VAR="u" VALUE="[3]" />
                <P VAR="rho" VALUE="[3]" />
            </REGION>
            <REGION REF="2">
                <P VAR="u" VALUE="[4]" />
                <P VAR="rho" VALUE="[4]" />
            </REGION>
            <REGION REF="3">
                <P VAR="u" VALUE="[1]" />
                <P VAR="rho" VALUE="[1]" />
            </REGION>
            <REGION REF="4">
                <P VAR="u" VALUE="[2]" />
                <P VAR="rho" VALUE="[2]" />
            </REGION>
        </BOUNDARYCONDITIONS>

        <GLOBALSYSSOLNINFO>
            <V VAR="u">
            <I PROPERTY="GlobalSysSoln" VALUE="IterativeStaticCond" />
            <I PROPERTY="IterativeSolverTolerance" VALUE="1e-8"/>
            </V>
        </GLOBALSYSSOLNINFO>

    </CONDITIONS>

</NEKTAR>
