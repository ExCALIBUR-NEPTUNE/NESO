<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <FORCING>
        <FORCE TYPE="SourceTerms" />
    </FORCING>

    <CONDITIONS>
        <PARAMETERS>
            <P> TimeStep       = 5e-3        </P>
            <P> NumSteps       = 150       </P>
            <P> IO_CheckSteps  = NumSteps+1 </P>
            <P> IO_InfoSteps   = NumSteps+1  </P>
            <P> Gamma          = 5.0/3.0     </P>
            <P> GasConstant    = 1.0         </P>
            <P> pInf           = 1.0         </P>
            <P> rhoInf         = 1.0         </P>
            <P> uInf           = 1.0         </P>
            <P> num_particle_steps_per_fluid_step = 1 </P>
            <P> num_particles_total = 200 </P>
            <P> num_particles_per_cell = -1 </P>
            <P> particle_num_write_particle_steps = 0 </P>
            <P> particle_thermal_velocity = 1.0 </P>
            <P> particle_number_density = 3e18 </P>
            <P> particle_source_region_count = 2 </P>
            <P> particle_source_region_offset = 0.05 </P>
            <P> particle_source_region_gaussian_width = 0.01 </P>
            <P> particle_source_lines_per_gaussian = 7 </P>
            <P> unrotated_x_max = 110.0 </P>
            <P> unrotated_y_max = 1.0 </P>
            <P> srcs_mask = 0.0 </P>
            <P> mass_recording_step = 0 </P>
        </PARAMETERS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                VALUE="SOLWithParticles"     />
            <I PROPERTY="Projection"            VALUE="DisContinuous"        />
            <I PROPERTY="AdvectionType"         VALUE="WeakDG"               />
            <I PROPERTY="TimeIntegrationMethod" VALUE="ClassicalRungeKutta4" />
            <I PROPERTY="UpwindType"            VALUE="ExactToro"            />
        </SOLVERINFO>
        <VARIABLES>
            <V ID="0"> rho </V>
            <V ID="1"> rhou </V>
            <V ID="2"> rhov </V>
            <V ID="3"> E </V>
            <V ID="4"> T </V>
            <V ID="5"> rho_src </V>
            <V ID="6"> rhou_src </V>
            <V ID="7"> rhov_src </V>
            <V ID="8"> E_src </V>
            <V ID="9"> n_neut </V>
        </VARIABLES>
        <BOUNDARYREGIONS>
            <!-- Left edge-->
            <B ID="0"> C[1] </B>
            <!-- Right edge -->
            <B ID="1"> C[2] </B>
            <!-- Top edge -->
            <B ID="2"> C[3] </B>
            <!-- Bottom edge -->
            <B ID="3"> C[4] </B>
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <P VAR="rho" VALUE="[1]" />
                <P VAR="rhou" VALUE="[1]" />
                <P VAR="rhov" VALUE="[1]" />
                <P VAR="E" VALUE="[1]" />
                <P VAR="T" VALUE="[1]" />
                <P VAR="rho_src" VALUE="[1]" />
                <P VAR="rhou_src" VALUE="[1]" />
                <P VAR="rhov_src" VALUE="[1]" />
                <P VAR="E_src" VALUE="[1]" />
                <P VAR="n_neut" VALUE="[1]" />
            </REGION>
            <REGION REF="1">
                <P VAR="rho" VALUE="[0]" />
                <P VAR="rhou" VALUE="[0]" />
                <P VAR="rhov" VALUE="[0]" />
                <P VAR="E" VALUE="[0]" />
                <P VAR="T" VALUE="[0]" />
                <P VAR="rho_src" VALUE="[0]" />
                <P VAR="rhou_src" VALUE="[0]" />
                <P VAR="rhov_src" VALUE="[0]" />
                <P VAR="E_src" VALUE="[0]" />
                <P VAR="n_neut" VALUE="[0]" />
            </REGION>
            <REGION REF="2">
                <P VAR="rho" VALUE="[3]" />
                <P VAR="rhou" VALUE="[3]" />
                <P VAR="rhov" VALUE="[3]" />
                <P VAR="E" VALUE="[3]" />
                <P VAR="T" VALUE="[3]" />
                <P VAR="rho_src" VALUE="[3]" />
                <P VAR="rhou_src" VALUE="[3]" />
                <P VAR="rhov_src" VALUE="[3]" />
                <P VAR="E_src" VALUE="[3]" />
                <P VAR="n_neut" VALUE="[3]" />
            </REGION>
            <REGION REF="3">
                <P VAR="rho" VALUE="[2]" />
                <P VAR="rhou" VALUE="[2]" />
                <P VAR="rhov" VALUE="[2]" />
                <P VAR="E" VALUE="[2]" />
                <P VAR="T" VALUE="[2]" />
                <P VAR="rho_src" VALUE="[2]" />
                <P VAR="rhou_src" VALUE="[2]" />
                <P VAR="rhov_src" VALUE="[2]" />
                <P VAR="E_src" VALUE="[2]" />
                <P VAR="n_neut" VALUE="[2]" />
            </REGION>
        </BOUNDARYCONDITIONS>
        <FUNCTION NAME="InitialConditions">
            <E VAR="rho" DOMAIN="0" VALUE="rhoInf" />
            <E VAR="rhou" DOMAIN="0" VALUE="0.0" />
            <E VAR="rhov" DOMAIN="0" VALUE="0.0" />
            <E VAR="E" DOMAIN="0" VALUE="pInf/(Gamma-1)" />
          <E VAR="rho_src,rhou_src,rhov_src,E_src" DOMAIN="0" VALUE="0.0" />
          <E VAR="T" DOMAIN="0" VALUE="0.0" />
          <E VAR="n_neut" DOMAIN="0" VALUE="0.0" />
        </FUNCTION>
    </CONDITIONS>

</NEKTAR>
