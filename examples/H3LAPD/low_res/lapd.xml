<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <COLLECTIONS DEFAULT="MatrixFree" />
    <!--
        The composite indices for the domain are expected to be 0 and 4 if the
        mesh was generated from the .geo files
     -->
    <EXPANSIONS>
       <E COMPOSITE="C[0]" NUMMODES="2" TYPE="MODIFIED" FIELDS="ne,Ge,Gd,w,phi" />
       <E COMPOSITE="C[4]" NUMMODES="2" TYPE="MODIFIED" FIELDS="ne,Ge,Gd,w,phi" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE" VALUE="LAPD" />
            <I PROPERTY="Projection" VALUE="DisContinuous" />
            <I PROPERTY="TimeIntegrationMethod" VALUE="ClassicalRungeKutta4" />
            <I PROPERTY="GlobalSysSoln"         VALUE="IterativeStaticCond"/>
            <I PROPERTY="IterativeSolverTolerance" VALUE="1e-10"/>
        </SOLVERINFO>

        <PARAMETERS>
            <P> TFinal         = 1               </P>
            <P> TimeStep       = 0.001           </P>
            <P> NumSteps       = TFinal/TimeStep </P>
            <!-- <P> IO_InfoSteps   = NumSteps+1      </P> -->
            <P> IO_InfoSteps   = 1      </P>
            <P> IO_CheckSteps  = NumSteps/50     </P>
            <P> Bxy            = 0.1             </P> <!-- Magnetic field strength in T -->
            <P> Rmax           = 0.4             </P>
        </PARAMETERS>

        <VARIABLES>
            <V ID="0"> ne  </V>
            <V ID="1"> Ge  </V>
            <V ID="2"> Gd  </V>
            <V ID="3"> w   </V>
            <V ID="4"> phi </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1] </B> <!-- Curved surface -->
            <B ID="1"> C[2] </B> <!-- Circular end 1/2 -->
            <B ID="2"> C[3] </B> <!-- Circular end 2/2 -->
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <N VAR="ne" VALUE="0" />
                <N VAR="Ge" VALUE="0" />
                <N VAR="Gd" VALUE="0" />
                <N VAR="w" VALUE="0" />
                <N VAR="phi" VALUE="0" />
            </REGION>
            <REGION REF="1">
                <N VAR="ne" VALUE="0" />
                <N VAR="Ge" VALUE="0" />
                <N VAR="Gd" VALUE="0" />
                <N VAR="w" VALUE="0" />
                <N VAR="phi" VALUE="0" />
            </REGION>
            <REGION REF="2">
                <N VAR="ne" VALUE="0" />
                <N VAR="Ge" VALUE="0" />
                <N VAR="Gd" VALUE="0" />
                <N VAR="w" VALUE="0" />
                <N VAR="phi" VALUE="0" />
            </REGION>
        </BOUNDARYCONDITIONS>
        <!-- See lapd.md for note on how BOUT++ does ICs-->
        <FUNCTION NAME="InitialConditions">
            <!-- <E VAR="rho" DOMAIN="0" VALUE="rhoInf" /> -->
            <E VAR="ne"  DOMAIN="0" VALUE="1" />
            <E VAR="Ge"  DOMAIN="0" VALUE="1" />
            <E VAR="Gd"  DOMAIN="0" VALUE="1" />
            <E VAR="w"   DOMAIN="0" VALUE="0" />
            <E VAR="phi" DOMAIN="0" VALUE="Rmax-sqrt(x*x + y*y)" />
        </FUNCTION>
    </CONDITIONS>
</NEKTAR>
