<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <COLLECTIONS DEFAULT="NoCollection" />
    <EXPANSIONS>
        <E COMPOSITE="C[0]" NUMMODES="4" TYPE="MODIFIED" FIELDS="n,T_e,w,phi" />
    </EXPANSIONS>

    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE" VALUE="RogersRicci2D" />
            <I PROPERTY="Projection" VALUE="DisContinuous" />
            <I PROPERTY="TimeIntegrationMethod" VALUE="RungeKutta4" />
            <I PROPERTY="AdvectionAdvancement"  VALUE="Explicit" />
        </SOLVERINFO>

        <PARAMETERS>
            <P> NumSteps       = 10000                 </P>
            <P> TimeStep       = 5e-6              </P>
            <P> IO_InfoSteps   = 10                  </P>
            <P> IO_CheckSteps  = 100                  </P>
            <!-- Constants -->
            <P> m_p = 1.67e-27 </P>
            <P> e   = 1.6e-19  </P>
            <!-- Model params (SI+eV units)-->
            <P> Omega_ci = 9.6e5 </P>
            <P> R        = 0.5   </P>
            <P> T_0      = 6.0   </P>
            <!-- Derived params -->
            <P> m_i    = 4 * m_p             </P>
            <P> c_s0   = sqrt(T_0 * e / m_i) </P>
            <P> rho_s0 = c_s0 / Omega_ci     </P>
            <P> B      = Omega_ci * m_i / e  </P>
            <!-- Model params (Normalised) -->
            <!--   Normalised B field; expect 1/40 -->
            <P> Bxy = B * 1 / T_0 * c_s0 / R * rho_s0 * rho_s0 </P>
        </PARAMETERS>
        <VARIABLES>
            <V ID="0"> n </V>
            <V ID="1"> T_e </V>
            <V ID="2"> w </V>
            <V ID="3"> phi </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1-4] </B>
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <N VAR="n"   VALUE="0" />
                <N VAR="T_e" VALUE="0" />
                <N VAR="w"   VALUE="0" />
                <D VAR="phi" VALUE="0" />
            </REGION>
        </BOUNDARYCONDITIONS>

        <FUNCTION NAME="InitialConditions">
            <E VAR="n"   VALUE="1" />
            <E VAR="T_e" VALUE="1" />
            <E VAR="w"   VALUE="0" />
            <E VAR="phi" VALUE="0" />
        </FUNCTION>
    </CONDITIONS>
</NEKTAR>
