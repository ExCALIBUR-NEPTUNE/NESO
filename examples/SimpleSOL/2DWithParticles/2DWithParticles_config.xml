<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <FORCING>
        <FORCE TYPE="SourceTerms" />
    </FORCING>

    <CONDITIONS>
        <PARAMETERS>
            <P> TimeStep       = 5e-3        </P>
            <P> NumSteps       = 800       </P>
            <P> IO_CheckSteps  = NumSteps/100 </P>
            <P> IO_InfoSteps   = NumSteps+1  </P>
            <P> Gamma          = 5.0/3.0     </P>
            <P> GasConstant    = 1.0         </P>
            <P> pInf           = 1.0         </P>
            <P> rhoInf         = 1.0         </P>
            <P> uInf           = 1.0         </P>
            <P> num_particle_steps_per_fluid_step = 1 </P>
            <P> num_particles_total = 100 </P>
            <P> num_particles_per_cell = -1 </P>
            <P> particle_time_step = TimeStep/num_particle_steps_per_fluid_step </P>
            <P> particle_num_time_steps = NumSteps/num_particle_steps_per_fluid_step </P>
            <P> particle_num_write_particle_steps = 4 </P>
            <P> particle_num_write_field_energy_steps = 0 </P>
            <P> particle_num_write_field_steps = 0 </P>
            <P> particle_num_print_steps = 0 </P>
            <P> particle_distribution_position = 2 </P>
            <P> particle_initial_velocity = 1.0 </P>
            <P> particle_charge_density = 105.27578027828649 </P>
            <P> particle_number_density = 105.27578027828649 </P>
            <P> particle_source_line_offset = 0.01 </P>
        </PARAMETERS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                VALUE="SOLWithParticles"     />
            <I PROPERTY="Projection"            VALUE="DisContinuous"        />
            <I PROPERTY="AdvectionType"         VALUE="WeakDG"               />
            <I PROPERTY="TimeIntegrationMethod" VALUE="ClassicalRungeKutta4" />
            <I PROPERTY="UpwindType"            VALUE="ExactToro"            />
        </SOLVERINFO>
        <VARIABLES>
            <V ID="0"> rho </V>
            <V ID="1"> rhou </V>
            <V ID="2"> rhov </V>
            <V ID="3"> E </V>
            <V ID="4"> T </V>
            <V ID="5"> rho_src </V>
        </VARIABLES>
        <BOUNDARYREGIONS>
            <!-- Left edge-->
            <B ID="0"> C[1] </B>
            <!-- Right edge -->
            <B ID="1"> C[2] </B>
            <!-- Top edge -->
            <B ID="2"> C[3] </B>
            <!-- Bottom edge -->
            <B ID="3"> C[4] </B>
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <D VAR="rho" VALUE="rhoInf" />
                <D VAR="rhou" VALUE="-rhoInf*uInf" />
                <D VAR="rhov" VALUE="0" />
                <D VAR="E" VALUE="pInf/(Gamma-1)+0.5*rhoInf*(uInf*uInf)" />
                <N VAR="T" VALUE="0" />
                <N VAR="rho_src" VALUE="0" />
            </REGION>
            <REGION REF="1">
                <D VAR="rho" VALUE="rhoInf" />
                <D VAR="rhou" VALUE="rhoInf*uInf" />
                <D VAR="rhov" VALUE="0" />
                <D VAR="E" VALUE="pInf/(Gamma-1)+0.5*rhoInf*(uInf*uInf)" />
                <N VAR="T" VALUE="0" />
                <N VAR="rho_src" VALUE="0" />
            </REGION>
            <REGION REF="2">
                <P VAR="rho" VALUE="[3]" />
                <P VAR="rhou" VALUE="[3]" />
                <P VAR="rhov" VALUE="[3]" />
                <P VAR="E" VALUE="[3]" />
                <P VAR="T" VALUE="[3]" />
                <P VAR="rho_src" VALUE="[3]" />
            </REGION>
            <REGION REF="3">
                <P VAR="rho" VALUE="[2]" />
                <P VAR="rhou" VALUE="[2]" />
                <P VAR="rhov" VALUE="[2]" />
                <P VAR="E" VALUE="[2]" />
                <P VAR="T" VALUE="[2]" />
                <P VAR="rho_src" VALUE="[2]" />
            </REGION>
        </BOUNDARYCONDITIONS>
        <FUNCTION NAME="InitialConditions">
          <F VAR="rho,rhou,rhov,E" FILE="ICs.rst" />
          <E VAR="T,rho_src" DOMAIN="0" VALUE="0.0" />
        </FUNCTION>
    </CONDITIONS>

</NEKTAR>
